<%= form_for @recipe do |f| %>
  <% if @recipe.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@recipe.errors.count, "error") %> prohibited this recipe from being saved:</h2>

      <ul>
      <% @recipe.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :name, "Give your Juice Recipe a Name (required)" %><br>
    <%= f.text_field :name %>
  </div>

  <div class="field">
    <%= f.label :body, "What's Special about this Juice? (optional)" %><br>
    <%= f.text_area :body %>
  </div>

  <div class="field">
  <p><%= f.label :featured_image, "Have a Cool Picture? (optional)" %></p>
    <%= f.file_field :featured_image %>
  </div>



  <h2>Choose Ingredients (required)</h2>

<% @ingredients.each do |i| %>

<div class="ingredient-list">
  <div class="ingredient-image">
    <%= image_tag(get_image(i.name), width: "75") %>
  </div>
    <%= check_box_tag "ingredients[]", i.id %>
    <%= link_to i.name, i %>
</div>


<% end %>

  <div class="actions">
<%= f.hidden_field :user_id %>
<%= f.submit class: "button-default" %>
  </div>


<% end %>
