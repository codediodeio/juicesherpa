<%= form_for(@recipe) do |f| %>
  <% if @recipe.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@recipe.errors.count, "error") %> prohibited this recipe from being saved:</h2>

      <ul>
      <% @recipe.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :name %><br>
    <%= f.text_field :name %>
  </div>

  <div class="field">
    <%= f.label :body %><br>
    <%= f.text_field :body %>
  </div>

  <div class="field">
    <%= f.label :recipe_image %>
    <%= f.attachment_field :recipe_image, direct: true %>
  </div>

  <div class="uploading">Image is Uploading...</div>
  <div class="complete">Image Upload Complete</div>

  <div class="actions">
    <%= f.hidden_field :user_id %>
    <%= f.submit %>
  </div>
<% end %>
